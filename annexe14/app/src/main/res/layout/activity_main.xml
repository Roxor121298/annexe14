<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:id="@+id/principale">

    <LinearLayout
        android:id="@+id/Colonne1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_contenant"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/jeton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/jeton" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Colonne2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_contenant"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/jeton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/jeton" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Colonne3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_contenant"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/jeton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/jeton" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Colonne4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_contenant_triangle"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/jeton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/jeton" />
    </LinearLayout>
</LinearLayout>